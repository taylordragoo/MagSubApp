@model MagSubApp.Models.Webappmaster
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="card text-center">
    <div class="row justify-content-md-center">
        <div class="loginForm col-lg-5 col-md-8 col-sm-8 p-4">

            <h3 class="card-title">Which magazine would you like to subscribe to?</h3>
            <p class="card-text">Don't sweat your decision - they're all awesome.</p>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" id="Email" name="Email" type="text" placeholder="Email Address" />
                    <span asp-validation-for="Email" class="field-validation text-danger"></span>
                </div>
                <div class="form-group">
                    <select asp-for="SubID" name="SubID" class="custom-select" id="inputGroupSelect04">
                        <option value="0">Select a Magazine</option>
                        <option value="1">Readers Digest</option>
                        <option value="2">Sports Illustrated</option>
                        <option value="3">Rolling Stone</option>
                        <option value="4">Game Informer</option>
                        <option value="5">PC Magazine</option>
                    </select>
                    <span asp-validation-for="SubID" class="field-validation text-danger" data-valmsg-for="SubID" data-valmsg-replace="true" error-msg="None"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-block btn-lg btn-primary">Sign Me Up!</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
